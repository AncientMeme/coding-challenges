{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Encode",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet build",
      "program": "${workspaceFolder}/src/CompressionTool/bin/Debug/net6.0/CompressionTool.dll",
      "args": ["encode", "src/CompressionTool/hello.txt", "src/CompressionTool/out.txt"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Decode",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet build",
      "program": "${workspaceFolder}/src/CompressionTool/bin/Debug/net6.0/CompressionTool.dll",
      "args": ["decode", "src/CompressionTool/out.txt", "src/CompressionTool/out2.txt"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
  ]
}